{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"]
    // "paths": {
    //   "@/*": ["src/*"]
    // }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
